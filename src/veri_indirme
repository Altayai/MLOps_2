from sklearn.datasets import load_iris
import pandas as pd
from pathlib import Path

# Çıktı klasörünü hazırla
out_dir = Path("data/raw")
out_dir.mkdir(parents=True, exist_ok=True)

# Iris datasetini yükle
iris = load_iris(as_frame=True)

# Özellikler + hedef değişkeni birleştir
df = pd.concat([iris.data, iris.target.rename("target")], axis=1)

# CSV olarak kaydet
csv_path = out_dir / "iris.csv"
df.to_csv(csv_path, index=False)

print(f"✅ Iris dataset kaydedildi: {csv_path}")